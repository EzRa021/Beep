{
    "version": 2,
    "builds": [
      {
        "src": "frontend/vite.config.js",
        "use": "@vercel/static-build"
      },
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.js" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  